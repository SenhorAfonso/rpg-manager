{
  "env": {
    "node": true,
    "es2016": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "eslint:all",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-useless-constructor": "off",
    "import/no-unresolved": "off",
    "class-methods-use-this":"off",
    "no-empty-function": "off",
    "no-trailing-spaces": "error",
    "no-param-reassign": "off",
    "padding-line-between-statements": "error",
    "no-multiple-empty-lines": "error",
    "space-in-parens": "warn",
    "sort-keys": "off",
    "object-curly-spacing": "error",
    "no-shadow": "off",
    "sort-imports": "off",
    "init-declarations": "off",
    "lines-between-class-members": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "max-lines-per-function": "off",
    "max-statements": [
      "error",
      20
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "off",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "overrides": [
    {
      "files": ["game-schema.ts", "start-game-dto.ts", "classes-schema.ts", "feats-schema.ts", "features-schema.ts", "magic-items-schema.ts", "proficiencies-schema.ts", "spells-schema.ts", "monsters-schema.ts"],
      "rules": {
        "max-classes-per-file": "off"
      }
    },
    {
      "files": ["populate-service.ts"],
      "rules": {
        "no-await-in-loop": "off"
      }
    },
    {
      "files": ["character-service.ts", "populate-repository.ts", "populate-service.ts"],
      "rules": {
        "max-params": "off",
        "no-restricted-syntax": "off",
        "no-magic-numbers": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["LoggerInterceptor.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}